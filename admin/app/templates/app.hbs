<div class="page-header">
  <h1>
    {{link-to 'Apps/' 'index' class='link-subtle'}}{{name}}
  <h1>
</div>


<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class='panel-title'>Current live build</h3>
  </div>
  <div class="panel-body">
    <p>Branch: <strong>{{bestBuild.branch}}</strong></p>
    <p>Sha: <strong>{{bestBuild.sha}}</strong></p>
    <p>Job: <strong>{{bestBuild.job}}</strong></p>
  </div>
</div>

<h3 class='appDetail-buildListTitle'>All builds</h3>
<table class='table table-hover appDetail-buildList'>
  <tbody>
    {{#each build in builds}}
      <tr {{bind-attr class=':appDetail-buildListItem'}}>
        <td class='appDetail-buildListItemCell'>#{{build.id}}</td>
        <td class='appDetail-buildListItemCell'>
          <p>{{build.createdAt}}</p>
          {{#if build.isBest}}
            <span class="label label-success">Live</span>
          {{/if}}
        </td>
        <td class='appDetail-buildListItemCell'>#{{build.sha}}</td>
        <td class='appDetail-buildListItemCell text-right'>
          {{#if build.isBest}}
            <button class="btn btn-danger btn-xs">Deactivate</button>
          {{else}}
            <button class="btn btn-warning btn-xs">Make live</button>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
