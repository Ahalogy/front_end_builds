<form {{action "save" on="submit"}}>

  <div {{bind-attr class="showNameError:has-error :form-group"}}>
    <label class="control-label">Name</label>
    <p class="help-block">
      Name your key, could be something like "Jenkins" or "Ryan's laptop key".
    </p>
    {{input
      value=pubkey.name
      classNames="form-control Pubkey-form__name"}}
  </div>

  <div {{bind-attr class="showPubkeyError:has-error :form-group"}}>
    <label class="control-label">Public key</label>
    <p class="help-block">
      Copy and paste your public key here. This is usually in your home folder
      under <em>~/.ssh/id_rsa.pub</em>.
    </p>
    {{textarea
      value=pubkey.pubkey
      rows="10"
      classNames="form-control Pubkey-form__pubkey"}}
  </div>

  <div class="clearfix">
    <div class="pull-left">
      {{#if cancelRoute}}
        {{link-to "Cancel" cancelRoute
          classNames="btn btn-default Pubkey-form__cancel"}}
      {{else}}
        <a href="#" {{action "cancel"}}
          class="btn btn-default Pubkey-form__cancel">Cancel</a>
      {{/if}}
    </div>

    <div class="pull-right">
      <input type="submit" value="Add"
        class="btn btn-primary Pubkey-form__save" />
    </div>
  </div>

</form>
