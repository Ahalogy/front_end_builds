<form {{action 'createApp' on='submit'}}>
  <div class="appCard panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        {{input value=app.name
          class='appCard-newInput'
          placeholder='Enter an app name'}}
      </h3>
    </div>
    <div class='panel-body'>
      <p class='text-muted'><small>Once your app is created, you'll receive an API key you can use to push out new builds.</small></p>

      {{async-button action="createApp"
        type='submit'
        class='btn btn-sm btn-success'
        default="Create"
        pending="Creating..."}}

      <button {{action 'discardNewApp'}} class='btn btn-link btn-default'>
        {{fa-icon 'remove'}}
      </button>

    </div>
  </div>
</form>
