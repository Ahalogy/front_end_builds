<div class="page-header">
  <h1>Apps</h1>
</div>

<div class='text-right u-margin-bottom'>
  <button {{action 'createApp'}} class="btn btn-default btn-sm">
    {{fa-icon 'plus'}}
    New app
  </button>
</div>

<div class="row">
  {{#each app in savedApps}}
    <div class="col-sm-4">
      {{app-card app=app}}
    </div>
  {{/each}}

  {{#if newApp}}
    <div class="col-sm-4">
      {{new-app-card app=newApp}}
    </div>
  {{/if}}
</div>

{{liquid-modal}}
